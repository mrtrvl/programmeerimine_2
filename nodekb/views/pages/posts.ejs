<!DOCTYPE html>
<html>
    <% include ../partials/head %>
    <body>
        <header>
            <% include ../partials/header %>
        </header>

        <main>
            <div class="container">
                <h1>Posts</h1>
                <a href="/posts/add" class="btn btn-primary">Add post</a>
                <% posts.forEach(function(post) { %>
                <div class='card'>
                    <div class='card-body'>
                        <h2 class='card-title'><a href="/post/<%= post._id %>"> <%= post.title %></a> </h3>
                        <div> <%= post.author %> | <%= post.createdAt %> </div>
                        <p> <%= post.content %> </p>
                        <p> <%= post._id %> </p>
                    </div>
                </div>
                <% }); %>
            </div>
        </main>
        <footer class="bg-light">
            <% include ../partials/footer %>
        </footer>
    </body>
</html>