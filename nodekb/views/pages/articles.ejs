<!DOCTYPE html>
<html>
    <% include ../partials/head %>
    <body>
        <header>
            <% include ../partials/header %>
        </header>

        <main>
            <div class="container">
                <h1>Articles</h1>
            </div>
            <ul>
                <% for (var i in articles) { %>
                    <li><%= articles[i].title %> Author: <%= articles[i].author %></li>
                    <p><%= articles[i].body %></p>
                <% } %>
              </ul>
        </main>
        <footer class="bg-light">
            <% include ../partials/footer %>
        </footer>
    </body>
</html>