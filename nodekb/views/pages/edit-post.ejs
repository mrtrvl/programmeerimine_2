<!DOCTYPE html>
<html>
    <% include ../partials/head %>
    <body>
        <header>
            <% include ../partials/header %>
        </header>

        <main>
            <div class="container">
                <h1>Edit post</h1>
                <form method="POST">
                    <div class="form-group">
                        <label for="postTitle" class="col-sm-2 col-form-label">Title</label>
                        <div class="col-sm-10">
                            <input type="text" name="title" class="form-control" id="postTitle" placeholder="Title" value="<%= post.title %>">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="postAuthor" class="col-sm-2 col-form-label">Author</label>
                        <div class="col-sm-10">
                            <input type="text" name="author" class="form-control" id="postAuthor" placeholder="Author" value="<%= post.author %>">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="postContent" class="col-sm-2 col-form-label">Content</label>
                        <div class="col-sm-10">
                            <textarea name="content" class="form-control" id="postContent" placeholder="Content"><%= post.content %></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="offset-sm-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </main>
        <footer class="bg-light">
            <% include ../partials/footer %>
        </footer>
    </body>
</html>